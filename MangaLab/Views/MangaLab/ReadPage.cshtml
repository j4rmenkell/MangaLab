@{
    Layout = "~/Views/Shared/_MangaLabLayout.cshtml";
}

<div class="container" ng-init="initReadPage('@ViewBag.MangaId', '@ViewBag.ChapterId')">

    <div ng-if="!isLoading">

        <div class="d-flex mt-5 g-3 align-items-center">

            <a class="text-decoration-none" href="/MangaLab/MangaPage/{{mangaId}}">
                <h1 class="text-white fs-3 p-1 boldonse-regular fw-bold me-3 manga-title">{{ mangaTitle }}</h1>
            </a>

            <div class="dropdown me-3">
                <button class="dropbutton btn dropdown-toggle border-3 border-white fw-semibold" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="mx-3 roboto">Chapter {{ currentChapter.attributes.chapter || '...' }}</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-dark" style="max-height: 400px; overflow-y: auto;">
                    <li ng-repeat="chapter in allChapters">
                        <a class="dropdown-item d-flex justify-content-between align-items-center"
                           href="#"
                           ng-click="changeChapter(chapter)"
                           ng-class="{ 'bg-secondary': chapter.id === currentChapter.id }">
                            <span>Chapter {{ chapter.attributes.chapter || 'N/A' }}</span>
                            <span class="badge bg-danger text-light">{{ chapter.attributes.translatedLanguage | uppercase }}</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="container my-4">
            <div class="text-center">
                <img ng-repeat="pageUrl in pages"
                     ng-src="{{ pageUrl }}"
                     class="img-fluid mb-1"
                     alt="Page {{ $index + 1 }}" />
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center my-5 gap-3">

            <button class="chapter-buttons btn btn-outline-danger gradient-hover rounded-circle d-flex align-items-center justify-content-center text-white"
                    ng-click="changeChapter(previousChapter)"
                    ng-disabled="!previousChapter">
                <span class="carousel-control-prev-icon"></span>
            </button>

            <div class="dropdown">
                <button class="dropbutton btn dropdown-toggle border-3 border-white fw-semibold" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="mx-3 roboto">Chapter {{ currentChapter.attributes.chapter || '...' }}</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-dark">
                    <li ng-repeat="chapter in allChapters">
                        <a class="dropdown-item d-flex justify-content-between align-items-center"
                           href="#"
                           ng-click="changeChapter(chapter)"
                           ng-class="{ 'bg-secondary': chapter.id === currentChapter.id }">
                            <span>Chapter {{ chapter.attributes.chapter || 'N/A' }}</span>
                            <span class="badge bg-danger text-light">{{ chapter.attributes.translatedLanguage | uppercase }}</span>
                        </a>
                    </li>
                </ul>
            </div>

            <button class="chapter-buttons btn btn-outline-danger gradient-hover rounded-circle d-flex align-items-center justify-content-center text-white"
                    ng-click="changeChapter(nextChapter)"
                    ng-disabled="!nextChapter">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>


    </div>

    <div ng-if="isLoading" class="text-center text-white mt-5">
        <h3>Loading Chapter...</h3>
    </div>

</div>